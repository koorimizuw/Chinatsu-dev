{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "types": ["vite/client", "jest", "cypress"],
      "noEmit": true,
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue", "main.ts"]
}